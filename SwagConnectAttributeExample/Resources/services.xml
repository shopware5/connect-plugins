<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="swag_connect_attribute_example.components.custom_attribute_writer" class="SwagConnectAttributeExample\Components\CustomAttributeWriter">
            <argument type="service" id="pluginlogger"/>
        </service>

        <service id="swag_connect_attribute_example.components.custom_attribute_reader" class="SwagConnectAttributeExample\Components\CustomAttributeReader">
            <argument type="service" id="pluginlogger"/>
        </service>

        <service class="SwagConnectAttributeExample\Subscriber\CustomAttributeSubscriber">
            <argument type="service" id="swag_connect_attribute_example.components.custom_attribute_writer"/>
            <argument type="service" id="swag_connect_attribute_example.components.custom_attribute_reader"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>